{
  "name": "dependency-guardian",
  "version": "1.0.0",
  "description": "A powerful dependency management and analysis tool for Node.js projects",
  "main": "src/index.js",
  "bin": {
    "dependency-guardian": "./src/index.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "dependency",
    "security",
    "license",
    "analysis",
    "npm",
    "audit"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "commander": "^11.0.0",
    "cosmiconfig": "^9.0.0",
    "dependency-tree": "^11.1.1",
    "glob": "^10.3.10",
    "inquirer": "^8.2.6",
    "js-yaml": "^4.1.0",
    "madge": "^6.1.0",
    "node-cache": "^5.1.2",
    "ora": "^5.4.1",
    "p-limit": "^3.1.0",
    "semver": "^7.7.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/fixtures/"
    ]
  }
}