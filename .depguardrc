{
  "allowedLicenses": ["MIT", "ISC", "Apache-2.0", "BSD-3-Clause"],
  "ignorePatterns": ["**/node_modules/**", "**/dist/**"],
  "rules": {
    "dependencies": {
      "maxAge": "6 months",
      "forbiddenLicenses": ["GPL"],
      "requireLicense": true
    },
    "devDependencies": {
      "maxAge": "1 year",
      "forbiddenLicenses": [],
      "requireLicense": false
    }
  },
  "output": {
    "defaultFormat": "console",
    "reportsDir": "./reports",
    "silent": false,
    "debug": false
  },
  "notifications": {
    "exitOnHighSeverity": true,
    "exitOnForbiddenLicense": true
  }
} 